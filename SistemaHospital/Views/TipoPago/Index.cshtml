@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-6">
        <h2 class="text-primary">Lista de Tipos de Pago</h2>
    </div>
    <div class="col-lg-6">
        <a class="btn btn-outline-primary" asp-action="Upsert">
            <i class="fa-solid fa-square-plus"></i>
            Agregar tipo de pago
        </a>
    </div>
</div>

<br />

<div class="p-4 border rounded bg-light">
    <table id="tblTiposPago" class="table table-responsive table-hover">
        <thead class="table-dark">
            <tr>
                <th>Descripción</th>
                <th>Acciones</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/tipoPago.js"></script>
}